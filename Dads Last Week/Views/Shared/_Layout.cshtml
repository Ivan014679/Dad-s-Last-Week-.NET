<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dad's Last Week</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    @{
        string Usuario = Convert.ToString(Session["nomusuario"]);
        if (Usuario != "")
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Dad's Last Week", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        &nbsp;&nbsp;&nbsp;
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li><font color="white"><h4>Bienvenido @Usuario</h4></font></li>
                            <li>@Html.ActionLink("Cerrar sesión", "Close", "Jugador")</li>                            
                        </ul>

                    </div>
                </div>
            </div>
        }
     }

            <div class="container body-content">
                <div class="@ViewBag.TipoContenedor">
                    <div class="contenedor2">
                        <img src="~/Content/images/Titulo.png" style="margin-top: 40px; margin-bottom: 20px;" />
                        @RenderBody()
                    </div>
                </div>
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Dad's Last Week</p>
                </footer>
            </div>

            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/bootstrap.min.js"></script>
        </body>
</html>